---
import { getCollection } from 'astro:content';
import Arrow from '@/components/shared/arrow.astro';
import Breadcrumbs from '@/components/shared/breadcrumbs.astro';
import Link from '@/components/shared/link.astro';
import BaseLayout from '@/layouts/base-layout.astro';

const recipes = await getCollection('recipes');
---

<BaseLayout title="damitzi | bread recipes">
    <div class="flex flex-col gap-2">
        <h1 class="text-2xl font-serif font-medium">Bread recipes</h1>
        <Breadcrumbs />
        <ul class="space-y-2 w-fit">
            {
                recipes.map(recipe => (
                    <li class="flex items-center group gap-2">
                        <Arrow />
                        <Link
                            href={`/bread/${recipe.data.slug}`}
                            title={recipe.data.title}
                            internal
                        />
                    </li>
                ))
            }
        </ul>
    </div>
</BaseLayout>
