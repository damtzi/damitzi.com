---
import { formatTime } from "@/lib/utils";

interface Props {
    date: string;
    distance: number; // meters
    movingTime: number; // seconds
}

const { date, distance, movingTime } = Astro.props;

// Convert distance to km
const distanceKm = distance / 1000;

// Calculate pace in seconds per km
const paceSecondsPerKm = movingTime / distanceKm;

// Calculate minutes and seconds for pace
const paceMinutes = Math.floor(paceSecondsPerKm / 60);
const paceSeconds = Math.round(paceSecondsPerKm % 60);

// Format seconds with leading zero if needed
const formattedSeconds = paceSeconds < 10 ? `0${paceSeconds}` : paceSeconds;

// Format date to "12 May 2025"
const formattedDate = new Date(date).toLocaleDateString("en-GB", {
    day: "2-digit",
    month: "short",
    year: "numeric",
});
---

<div class="flex flex-col gap-2 border border-gray-300 shadow rounded-md px-4 py-2">
    <h3>{formattedDate}</h3>
    <div class="grid grid-cols-3">
        <div class="flex flex-col">
            <span class="text-sm text-gray-500">Distance</span>
            <span class="font-mono">
                {(distance / 1000).toFixed(2)} km
            </span>
        </div>
        <div class="flex flex-col">
            <span class="text-sm text-gray-500">Pace</span>
            <span class="font-mono">
                {paceMinutes}:{formattedSeconds} /km
            </span>
        </div>
        <div class="flex flex-col">
            <span class="text-sm text-gray-500">Duration</span>
            <span class="font-mono">
                {formatTime(movingTime)} mm:ss
            </span>
        </div>
    </div>
</div>
